<div class="row justify-content-center">
  <div class="col-lg">
    <div class="p-5">
      <div class="text-center">
          <h1 class="h4 text-gray-900 mb-4">Administrator Login</h1>
      </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-group") do |f| %>
          <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class:"form-control form-control-user" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: "Password", class:"form-control form-control-user" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <div class="custom-control custom-checkbox small">
                <%= f.check_box :remember_me, { class: "custom-control-input", id: "customCheck" } %>
                <label class="custom-control-label" for="customCheck">Remember Me</label>
              </div>
            </div>
          <% end %>

          <%= f.submit "Log in", class:"btn btn-primary btn-user btn-block" %>
      <% end %>
    </div>
  </div>
</div>