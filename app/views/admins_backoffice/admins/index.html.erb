<div class="row">
  <div class="col-lg-12">
    <h1 class="my-4 border-bottom pb-2"><%= t('messages.listing', model: @admins.model_name.human(count: @admins.count)) %></h1>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th><%= translate_attribute(@admins, :email) %></th>
        <th>
          <div class="d-flex justify-content-center">
            <%= link_to new_admins_backoffice_admin_path, class: "btn btn-success btn-circle btn-sm" do %>
              <i class="fa fa-plus"></i>
            <% end %>
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td class="id-column"><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td class="text-center" style="width: 120px">
            <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle btn-sm" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_admin_path(admin), data: { turbo_method: :delete, turbo_confirm: t('messages.confirm_with', item: admin.email.truncate(60)) }, class: "btn btn-danger btn-circle btn-sm" do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @admins %>
  </div>
</div>