<div class="row">
  <div class="col-lg-12">
    <h1 class="my-4 border-bottom pb-2">Questions list</h1>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Description</th>
        <th>Subject</th>
        <th>
          <div class="d-flex justify-content-center">
            <%= link_to new_admins_backoffice_question_path, class: "btn btn-success btn-circle btn-sm" do %>
              <i class="fa fa-plus"></i>
            <% end %>
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td class="id-column"><%= question.id %></td>
          <td><%= question.description.truncate(100) %></td>
          <td><%= question.subject.description.truncate(30) %></td>
          <td class="text-center" style="width: 120px">
            <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle btn-sm" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_question_path(question), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this question?" }, class: "btn btn-danger btn-circle btn-sm" do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @questions %>
  </div>
</div>